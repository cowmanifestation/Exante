<p>Would you like to <a href="/event/new" class="btn">create</a> one more?</p>
	<img src="../../images/penguin.png" alt="Tux waving"/>
<ul class="event_list">
<% @events.each_with_index do |event,i| %>
    <li <%= 'class="alt"' if i%2==1 %>>
		<a href="/event/<%= event.id %>"><%= event.title %></a>
		<p>Where: <%= event.location %></p>
		<p><%= event.description %></p>
		<p><%= event.start_date %></p>
		<p><%= event.start_time %></p>
		<p><%= event.end_date %></p>
		<p><%= event.end_time %></p>
		<p><%= event.all_day %></p>
		<p>Who is coming: <%= event.guest_list %></p>
		<p><%= event.private_event %></p>
    	<a href="/event/<%= event.id %>/delete" class="btn">delete</a>
	</li>
<% end %>
</ul>
